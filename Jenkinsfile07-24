node {
  def mavenHome = tool name: "maven3.9.8"
  stage ("Git Clone") {
    git credentialsId: 'Github-Jenkins-Credentials', url: 'https://github.com/Iron-chest/spring-boot-docker'
  }
  stage ("MavenBuild") {
    sh "${mavenHome}/bin/mvn clean package"
  }
  stage ("QualityReport") {
//  sh "${mavenHome}/bin/mvn sonar:sonar"
  }
  stage ("NexusUpload") {
//  sh "${mavenHome}/bin/mvn deploy"
  }
  stage ("DockerBuild") {
    sh "docker build -t devopsforjesus/spring-boot-mongo:0.0.2 ."
  }
  stage ("PushImageToRegistry") 
{
      withCredentials([string(credentialsId: 'DockerHub-Jenkins-token', variable: 'DockerHub-Jenkins-token')]) {
    sh "docker login -u devopsforjesus -p ${DockerHub-Jenkins-token}"
}
    sh "docker push devopsforjesus/spring-boot-mongo:0.0.2"
  }
}
