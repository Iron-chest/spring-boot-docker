#MYLANDMARKTECH PROJECT FOR DOCKER COMPOSE FILE

version: '3.1'
services:
  springapp:
    image: mylandmarktech/spring-boot-mongo
    restart: always
    environment:
      MONGO_DB_HOSTNAME: mongo
      MONGO_DB_USERNAME: devdb
      MONGO_DB_PASSWORD: devdb123
    ports:
      - 8080:8080
    networks:
      - springappnet
  mongo:
    image: mongo
    environment:
      MONGO_INITDB_ROOT_USERNAME: devdb
      MONGO_INITDB_ROOT_PASSWORD: devdb123
      volumes:
      - springappdata:/data/db
    restart: always
    networks:
      - springapp
volumes:
  springappdata:
    driver: local
networks:
  springappnet:
    driver: bridge
